@model OilCaseApi.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<h1>@ViewBag.Title</h1>

<hr/>
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id"/>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group" style="margin-top: 10px">
        <label asp-for="TeamId" class="control-label">Team</label>
        <select asp-for="TeamId" class="form-control" asp-items="ViewBag.Teams">
        </select>
    </div>
    <div style="margin-top: 10px">
        <label class="control-label" style="margin-top: 10px">StandardRoles</label>
        @foreach (var role in ViewBag.Roles)
        {
            <br/>
            <input type="radio" name="roleNames" value="@role.Name" class="form-check-input"
                   @(Model?.Roles?.FirstOrDefault(x => x.Name == role.Name) != null ? "checked=\"checked\"" : "")/>
            @role.Name
        }
    </div>

    <div class="form-group" style="margin-top: 20px">
        <input type="submit" value="Сохранить" class="btn btn-primary"/>
    </div>
</form>